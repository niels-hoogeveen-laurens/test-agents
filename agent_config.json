{
  "name": "TopdeskZenyaAgent",
  "description": "Een agent die data ophaalt van Topdesk Knowledge Base en Zenya CMS voor artikelen, procedures, documentatie en documenten",
  "version": "1.0.0",
  "entry_point": "json_agent/root_agent.py",
  "handler_class": "AgentSpaceHandler",
  "capabilities": [
    "knowledge_base_retrieval",
    "topdesk_integration",
    "zenya_integration",
    "content_search",
    "documentation_access",
    "document_management",
    "ticket_management"
  ],
  "api_endpoints": {
    "topdesk": {
      "base_url": "{{topdesk-api-url}}",
      "endpoints": [
        "/services/knowledge-base-v1/knowledgeItems",
        "/services/knowledge-base-v1/knowledgeItems/{identifier}",
        "/tas/api/login/operator",
        "/tas/api/incidents"
      ]
    },
    "zenya": {
      "base_url": "{{zenya-api-url}}",
      "endpoints": [
        "/tokens",
        "/portals/content_items",
        "/documents/{document_id}/download",
        "/search"
      ]
    }
  },
  "environment_variables": {
    "topdesk-key": "Topdesk API key voor authenticatie",
    "topdesk-api-url": "Base URL voor Topdesk API",
    "zenya-api-key": "Zenya API key voor authenticatie",
    "zenya-api-url": "Base URL voor Zenya API",
    "zenya-username": "Zenya gebruikersnaam voor authenticatie"
  },
  "sample_queries": [
    "Laat me de laatste knowledge items zien",
    "Zoek naar artikelen over wachtwoord reset",
    "Geef me publieke knowledge items",
    "Toon concept artikelen",
    "Haal knowledge item met ID 123 op",
    "Wat zijn de recente wijzigingen?",
    "Geef me een overzicht van de knowledge base",
    "Wat zijn mijn openstaande tickets? Mijn email is gebruiker@laurens.nl",
    "Zoek documenten over pensioen in Zenya",
    "Haal de laatste 10 documenten op uit Zenya",
    "Download document met ID 456 uit Zenya",
    "Zoek in Zenya naar beleid documenten"
  ]
}